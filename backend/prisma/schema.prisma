generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model POS {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  id_pos           String
  id_reference_pos String?
  coordinates      String
  type             String
  admin            String?
  licence          String
  zone             String
  area             String
  city             String
  province         String
}

model Agent {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  agent_id   String
  first_name String
  last_name  String
  phone      String
  afrimoney  String?
  status     String? @default("ACTIVE")
  zone       String
  city       String
  province   String

  terminal Terminal?
  revision Revision?

  @@map("agents")
}

model Terminal {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  id_terminal String   @unique()
  serial      String
  sim_card    String
  created_at  DateTime @default(now())

  agent_id String @unique() @db.ObjectId
  agent    Agent  @relation(fields: [agent_id], references: [id])

  @@map("terminals")
}

model Revision {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  image           String
  additional_info String?
  items           Json
  agent_id        String   @unique() @db.ObjectId
  agent           Agent    @relation(fields: [agent_id], references: [id])
  created_at      DateTime @default(now())
  updated_at      DateTime

  @@map("revisions")
}
